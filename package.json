{
  "name": "budget-pal",
  "version": "1.0.0",
  "description": "Automated daily spending limit SMS tracker with US Bank integration",
  "main": "apps/scheduler/index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=development concurrently \"npm run start:server\" \"npm run start:scheduler\"",
    "start:all": "NODE_ENV=development concurrently \"npm run start:server\" \"npm run start:web\"",
    "dev": "NODE_ENV=development tsx watch apps/scheduler/index.ts",
    "dev:all": "NODE_ENV=development concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "start:schedular": "NODE_ENV=development tsx apps/scheduler/index.ts",
    "start:server": "NODE_ENV=development tsx apps/api/server.ts",
    "start:web": "cd apps/web && NODE_ENV=development npm run dev -- --port 3001 --host",
    "dev:server": "NODE_ENV=development tsx watch apps/api/server.ts",
    "dev:web": "cd apps/web && NODE_ENV=development npm run dev -- --port 3001 --host",
    "build:web": "cd apps/web && npm run build",
    "test:web": "cd apps/web && npm run test",
    "lint:web": "cd apps/web && npm run lint",
    "start:now": "NODE_ENV=development tsx apps/scheduler/tests/test-run-daily-now.ts",
    "run:now:local": "curl -sS -X POST http://localhost:3000/api/run-now",
    "run:now:remote": "curl -sS -X POST $APP_URL/api/run-now",
    "test:plaid": "NODE_ENV=development tsx tests/test.plaid.ts",
    "test:transactions": "NODE_ENV=development tsx tests/test-transactions.ts",
    "test:account": "NODE_ENV=development tsx tests/test-account.ts",
    "test:calculations": "NODE_ENV=development node tests/calculations.test.js",
    "setup": "NODE_ENV=development node scripts/setup.js",
    "test:whatsapp": "NODE_ENV=development tsx apps/scheduler/tests/test-whatsapp.ts",
    "tree": "node scripts/print-tree.js .",
    "db:migrate": "dotenv -e .env.development -- npx prisma migrate dev --schema=apps/api/prisma/schema.prisma",
    "db:generate": "dotenv -e .env.development -- npx prisma generate --schema=apps/api/prisma/schema.prisma",
    "db:studio": "dotenv -e .env.development -- npx prisma studio --schema=apps/api/prisma/schema.prisma",
    "db:reset": "dotenv -e .env.development -- npx prisma migrate reset --schema=apps/api/prisma/schema.prisma",
    "db:seed": "dotenv -e .env.development -- tsx apps/api/prisma/seed.ts",
    "db:seed:clear": "dotenv -e .env.development -- tsx apps/api/prisma/seed.ts --clear"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "express": "^4.19.2",
    "plaid": "^11.0.0",
    "prisma": "^6.16.2",
    "twilio": "^4.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.3.1",
    "dotenv-cli": "^10.0.0",
    "node-cron": "^4.2.1",
    "nodemon": "^3.0.2",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  }
}
